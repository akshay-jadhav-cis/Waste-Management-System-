<% layout("layouts/biolerplate") %>

<div class="container text-center pt-4">
    <h1 class="text-primary mb-3">Welcome to Smart Waste Management</h1>
</div>

<section class="about-section py-4">
  <div class="container">
    <div class="row align-items-center gy-4">
      <!-- Image -->
      <div class="col-lg-6">
        <img src="/uploads/smart-waste-management-solution.jpg" 
             alt="Smart Waste Management" 
             class="img-fluid rounded shadow-lg border border-light">
      </div>

      <!-- Content -->
      <div class="col-lg-6">
        <h2 class="text-primary fw-bold mb-3">About Smart Waste Management System</h2>
        <p class="lead mb-3">
          Transform urban waste management by reporting garbage easily and helping authorities manage it efficiently.
        </p>

        <h5 class="mb-2 text-secondary">How it works:</h5>
        <div class="row g-2">
          <div class="col-12 col-md-4">
            <div class="card text-center shadow-sm h-100 p-2 border-0">
              <div class="card-body">
                <i class="bi bi-camera-fill fs-2 mb-1 text-primary"></i>
                <h6 class="fw-bold">Click Photo</h6>
                <p class="small text-muted">Capture an image of the waste to report.</p>
              </div>
            </div>
          </div>
          <div class="col-12 col-md-4">
            <div class="card text-center shadow-sm h-100 p-2 border-0">
              <div class="card-body">
                <i class="bi bi-upload fs-2 mb-1 text-primary"></i>
                <h6 class="fw-bold">Upload</h6>
                <p class="small text-muted">Upload the image along with location and description.</p>
              </div>
            </div>
          </div>
          <div class="col-12 col-md-4">
            <div class="card text-center shadow-sm h-100 p-2 border-0">
              <div class="card-body">
                <i class="bi bi-check-circle-fill fs-2 mb-1 text-primary"></i>
                <h6 class="fw-bold">Track & Resolve</h6>
                <p class="small text-muted">Authorities track, manage, and resolve complaints efficiently.</p>
              </div>
            </div>
          </div>
        </div>

        <p class="mt-3 mb-2">
          Join us in creating a cleaner, smarter, and more sustainable environment. Reporting waste has never been easier!
        </p>

        <!-- CTA Buttons -->
        <div class="d-flex flex-wrap gap-2 mt-2">
          <a href="/complaints/add" class="btn btn-primary btn-lg shadow-sm">Raise a Complaint</a>
          <a href="/history" class="btn btn-outline-primary btn-lg shadow-sm">Check History</a>
        </div>

      </div>
    </div>
  </div>
</section>
<section class="specialization-section py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="text-primary fw-bold">Our Specializations</h2>
      <p class="text-muted mx-auto" style="max-width:700px;">
        Leveraging cutting-edge technology and smart features, our system ensures efficiency, reliability, and a user-friendly experience.
      </p>
    </div>

    <div class="row g-4">
      <!-- Specialization Card 1 -->
      <div class="col-12 col-md-4">
        <div class="card shadow-sm border-0 h-100 text-center p-3">
          <i class="bi bi-speedometer2 fs-2 text-primary mb-3"></i>
          <h5 class="fw-bold mb-2">Real-Time Tracking</h5>
          <p class="small text-muted">Track complaints instantly with live updates and status notifications.</p>
        </div>
      </div>

      <!-- Specialization Card 2 -->
      <div class="col-12 col-md-4">
        <div class="card shadow-sm border-0 h-100 text-center p-3">
          <i class="bi bi-phone-fill fs-2 text-primary mb-3"></i>
          <h5 class="fw-bold mb-2">Mobile Friendly</h5>
          <p class="small text-muted">Report and manage waste easily from any device, anytime, anywhere.</p>
        </div>
      </div>

      <!-- Specialization Card 3 -->
      <div class="col-12 col-md-4">
        <div class="card shadow-sm border-0 h-100 text-center p-3">
          <i class="bi bi-shield-lock-fill fs-2 text-primary mb-3"></i>
          <h5 class="fw-bold mb-2">Secure & Reliable</h5>
          <p class="small text-muted">All data is securely stored and managed, ensuring privacy and reliability.</p>
        </div>
      </div>

      <!-- Specialization Card 4 -->
      <div class="col-12 col-md-4">
        <div class="card shadow-sm border-0 h-100 text-center p-3">
          <i class="bi bi-gear-fill fs-2 text-primary mb-3"></i>
          <h5 class="fw-bold mb-2">Efficient Management</h5>
          <p class="small text-muted">Streamlined workflow for authorities to manage, assign, and resolve complaints effectively.</p>
        </div>
      </div>

      <!-- Specialization Card 5 -->
      <div class="col-12 col-md-4">
        <div class="card shadow-sm border-0 h-100 text-center p-3">
          <i class="bi bi-camera-reels fs-2 text-primary mb-3"></i>
          <h5 class="fw-bold mb-2">Image-Based Reporting</h5>
          <p class="small text-muted">Users can upload images of waste for accurate identification and location tracking.</p>
        </div>
      </div>

      <!-- Specialization Card 6 -->
      <div class="col-12 col-md-4">
        <div class="card shadow-sm border-0 h-100 text-center p-3">
          <i class="bi bi-bar-chart-fill fs-2 text-primary mb-3"></i>
          <h5 class="fw-bold mb-2">Analytics & Insights</h5>
          <p class="small text-muted">Provides insights into waste patterns for better decision-making and planning.</p>
        </div>
      </div>
    </div>
  </div>
</section>

