<% layout("layouts/biolerplate") %>

<div class="container py-5">
  <h2 class="text-center text-primary mb-4">My Complaints</h2>

  <div class="row">
    <% if (complaints && complaints.length > 0) { %>
      <% complaints.forEach(gar => { %>
        <div class="col-md-6 mb-4">
          <div class="card shadow-sm h-100">
            <div class="d-flex flex-wrap p-2">
              <% if (gar.image && gar.image.length > 0) { %>
                <% gar.image.forEach(img => { %>
                  <img src="<%= img %>" style="max-width:100px; height:80px; object-fit:cover; margin:2px;" />
                <% }) %>
              <% } else { %>
                <img src="/images/placeholder.jpg" style="max-width:100px; height:80px;" />
              <% } %>
            </div>

            <div class="card-body">
              <h5 class="card-title text-capitalize"><%= gar.garbageType %></h5>
              <p class="card-text"><%= gar.description %></p>
              <p class="text-muted"><%= gar.address %></p>
              <span class="badge <%= gar.status === 'done' ? 'bg-success' : gar.status === 'in-progress' ? 'bg-info text-dark' : 'bg-warning text-dark' %>">
                <%= gar.status %>
              </span>

              <!-- Delete button (only owner) -->
              <form action="/complaints/user/delete/<%= gar._id %>" method="POST" class="mt-3">
                <button type="submit" class="btn btn-sm btn-danger w-100">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-center text-muted">You have no complaints.</p>
    <% } %>
  </div>
</div>
