
<% layout("/layouts/biolerplate.ejs") %>

<style>
  body {
    background: linear-gradient(135deg, #e3f2fd, #90caf9);
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: 'Poppins', sans-serif;
  }

  .home-container {
    text-align: center;
    background: white;
    padding: 40px 50px;
    border-radius: 15px;
    box-shadow: 0 8px 25px rgba(0,0,0,0.2);
  }

  h1 {
    margin-bottom: 30px;
    color: #0d47a1;
    font-weight: 700;
  }

  .home-container form {
    display: inline-block;
    margin: 10px 15px;
  }

  .btn-outline-success {
    width: 120px;
    font-weight: 600;
  }
</style>

<body>
  <div class="home-container">
    <h1>Welcome</h1>

    <form method="get" action="/users/login">
        <button class="btn btn-outline-success">Login</button>
    </form>

    <form method="get" action="/users/signup">
        <button class="btn btn-outline-success">Signup</button>
    </form>
  </div>
</body>
