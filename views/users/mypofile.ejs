<% layout("layouts/biolerplate") %>
<div class="container py-5">
  <!-- User Info Card -->
  <div class="card shadow-sm mb-4 rounded-3">
    <div class="card-body">
      <h2 class="card-title text-primary mb-3"><%= currentUser.username %>'s Profile</h2>
      <p><strong>Email:</strong> <%= currentUser.email %></p>
      <p>
        <strong>Location:</strong> <%= currentUser.city %>, <%= currentUser.district %>, <%= currentUser.state %>
      </p>
    </div>
  </div>

  <!-- My Complaints Section -->
  <h3 class="mb-3 text-secondary">My Complaints</h3>

  <% if (currentUser.complaints.length === 0) { %>
    <div class="alert alert-info text-center">No complaints submitted yet.</div>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% currentUser.complaints.forEach((c, index) => { %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0 rounded-3 complaint-card">
            <% if (c.image && c.image.length > 0) { %>
              <img src="<%= c.image[0] %>" class="card-img-top rounded-top-3" alt="Garbage Image" style="height:180px; object-fit:cover;">
            <% } %>
            <div class="card-body">
              <h5 class="card-title text-primary"><%= c.garbageType.charAt(0).toUpperCase() + c.garbageType.slice(1) %></h5>
              <p class="card-text text-muted"><%= c.description.length > 80 ? c.description.substring(0, 80) + "..." : c.description %></p>
              <p class="mb-1"><strong>Status:</strong> 
                <span class="<%= c.status === 'Resolved' ? 'text-success' : c.status === 'In Progress' ? 'text-warning' : 'text-danger' %>">
                  <%= c.status %>
                </span>
              </p>
              <p class="mb-2"><strong>Assigned to:</strong> <%= c.assignedTo ? c.assignedTo.name : "Not assigned" %></p>
              <!-- Delete Button -->
              <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= index %>">
                Delete
              </button>
            </div>
            <div class="card-footer bg-transparent border-top-0 text-end">
              <small class="text-muted"><%= new Date(c.createdAt).toLocaleDateString() %></small>
            </div>
          </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteModal<%= index %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= index %>" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title text-danger" id="deleteModalLabel<%= index %>">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                Are you sure you want to delete this complaint: <strong><%= c.garbageType %></strong>?
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="/complaints/user/delete/<%= c._id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>

      <% }) %>
    </div>
  <% } %>
</div>
